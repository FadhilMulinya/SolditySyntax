//first step
forge create <file-name> --rpc-url <rpc-url> --interactive
forge create Counter.sol --rpc-url http://fadhil.co --interactve

//Preffered way with anvil
forge create <File Name> --interactive
forge create Counter.sol --interactve

//with private key
forge create Counter.sol --rpc-url  <rpc-url> --private-key <private-key> 
forge create Counter.sol --rpc-url http://fadhil.co --private-key 0x1232456

//checking your comand line history
history

//clearing history 
history -c

//Deploying with scripts with anvil closed
forge script script/Counter.s.sol

//Deploying with scripts when anvil is running without broadcast
forge script script/Counter.s.sol --rpc-url 127.0.0.1:8545

//Deploying with scripts and broadcasting it
 forge script script/Counter.s.sol --rpc-url 127.0.0.1:8545 --broadcast --private-key ac0974bec3


